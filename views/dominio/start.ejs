<%- include('../includes/head.ejs') %>
    <script src="/js/dominio.js"></script>
    <script src="/js/dominiostart.js"></script>
    <link rel="stylesheet" href="/css/dominio.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main class="container mt-3">
                <h1 id="tituloPagina">INICIO DE PRUEBA</h1>
                <input type="hidden" id="textoId" value="id_del_texto">
                <input type="hidden" id="estudianteId" value="id_del_estudiante">
                <!-- Contenido del Texto -->
                <div id="contenidoTexto" style="display: none;">
                    <%= textoContenido %>
                </div>

                <!-- Cuenta Regresiva -->
                <div id="cuentaRegresiva" style="display: none;">
                    <h2>Cuenta Regresiva</h2>
                    <p id="contador">3</p>
                </div>

                <!-- Botón para iniciar la cuenta regresiva y el reconocimiento de voz -->
                <button class="btn link-btn"id="iniciarLecturaBtn">Iniciar Prueba</button>
                <button class="btn link-btn"onclick="alternarModoOscuro()">Modo Oscuro</button>
                <div id="contenedorBoton">
                    <button class="btn link-btn"onclick="cancelarScroll()">Cancelar Scroll</button>
                </div>
                <button onclick="window.location.reload();" class="btn link-btn">Reinicio</button>
                <!-- Botón para finalizar la prueba -->
                <button class="btn link-btn"id="finalizarPrueba">Finalizar Prueba</button>
            </main>



            <%- include('../includes/end.ejs') %>
    </body>