<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="formedit"
                    action="/estudiante/<% if (editing) { %>edit-estudiante<% } else { %>add-estudiante<% } %>"
                    method="POST">
                    <div class="form-control">
                        <label class="form-label" for="nombre">Nombres </label>
                        <input class="form-input" type="text" name="nombre" id="nombre"
                            value="<% if (editing) { %><%= estudiante.nombre %><% } %>">
                    </div>
                    <div class="form-control">
                        <label class="form-label" for="apellido">Apellidos </label>
                        <input class="form-input" type="text" name="apellido" id="apellido"
                            value="<% if (editing) { %><%= estudiante.apellido %><% } %>">
                    </div>
                    <div class="form-control">
                        <label class="form-label" for="edad">Edad </label>
                        <input class="form-input" type="Number" name="edad" id="edad"
                            value="<% if (editing) { %><%= estudiante.edad %><% } %>">
                    </div>
                    <div class="form-control">
                        <label class="form-label" for="curso">Curso </label>
                        <input class="form-input" type="text" name="curso" id="curso"
                            value="<% if (editing) { %><%= estudiante.curso %><% } %>">
                    </div>
                    <% if (editing) { %>
                        <input type="hidden" value="<%= estudiante._id %>" name="estudianteId">
                        <% } %>
                        <div class="btn-container">
                            <button class="btn form-btn" type="submit">
                                <% if (editing) { %>Actualizar estudiante<% } else { %> AÃ±adir estudiante<% } %>
                            </button>
                                <a href="/estudiante/estudiantes" class="btn link-btn">Ir a la vista de Estudiantes</a>
                        </div>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>